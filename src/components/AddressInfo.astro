---
import { Image } from "astro:assets";
import locationIcon from "../assets/images/icons/address-icon.svg";
import phoneIcon from "../assets/images/icons/phone-call-icon.svg";

interface Props {
  streetAddress: string;
  city: string;
  phoneLabel?: string;
  phoneNumber: string;
  title: string;
}

const {
  streetAddress,
  city,
  title,
  phoneLabel = "Tel/Fax:",
  phoneNumber,
} = Astro.props;
---

<article
  class="group hover:border-primary/30 relative overflow-hidden rounded-lg border border-neutral-200 bg-white p-6 shadow-sm transition-all duration-300 hover:shadow-md sm:p-8"
>
  <!-- Decorative accent bar -->
  <div
    class="bg-primary absolute top-0 left-0 h-full w-1 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  >
  </div>

  <div class="relative">
    <h2 class="mb-6 text-2xl font-bold text-neutral-600">{title}</h2>

    <!-- Address Section -->
    <div class="mb-6 flex items-start gap-4">
      <div class="mt-1 shrink-0">
        <Image
          src={locationIcon}
          alt="Location"
          width={24}
          height={24}
          class="text-primary opacity-60"
        />
      </div>
      <address class="leading-relaxed text-gray-700 not-italic">
        <div class="font-medium">{streetAddress}</div>
        <div class="text-gray-600">{city}</div>
      </address>
    </div>

    <!-- Phone Section -->
    <div class="flex items-center gap-4">
      <div class="shrink-0">
        <Image
          src={phoneIcon}
          alt="Phone"
          width={24}
          height={24}
          class="opacity-60"
        />
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center sm:gap-2">
        <span class="font-semibold text-gray-700">{phoneLabel}</span>
        <a
          href={`tel:${phoneNumber.replace(/[-\s]/g, "")}`}
          class="text-primary hover:text-primary/80 font-medium transition-colors hover:underline"
          aria-label={`Telefon: ${phoneNumber}`}
        >
          {phoneNumber}
        </a>
      </div>
    </div>
  </div>
</article>
