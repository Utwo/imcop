---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="rectangle1-gradient relative py-12 text-center text-3xl font-bold text-neutral-600 sm:my-18 md:text-5xl"
>
  <div
    class="rectangle2-gradient absolute top-1/2 left-1/12 h-[120px] w-[250px] -translate-y-1/2 sm:h-[190px] sm:w-[300px]"
  >
  </div>

  <h1 class="relative z-10">{title}</h1>
</div>
