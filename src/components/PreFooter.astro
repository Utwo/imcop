---
import { Image } from "astro:assets";
import phoneIcon from "../assets/images/icons/phone-call-icon.svg";
import heroBackground from "../assets/images/hero-background-7757b6.webp";
import Button from "./Button.astro";
---

<section class="relative my-16 overflow-hidden py-20">
  <div
    class="absolute inset-0 bg-cover bg-center opacity-80"
    style={`background-image: linear-gradient(to bottom right, rgb(237 27 36 / 0.05), white, rgb(245 245 245)), url(${heroBackground.src});`}
  >
  </div>

  <div class="relative z-10 mx-auto max-w-[800px] px-4">
    <div class="rounded-3xl bg-white p-8 shadow-2xl backdrop-blur-sm sm:p-12">
      <div class="flex flex-col items-center justify-center gap-10 text-center">
        <div class="space-y-3">
          <h2 class="text-2xl font-bold">Ai întrebări suplimentare?</h2>
          <p class="text-neutral-600">
            Suntem aici să te ajutăm cu orice informație ai nevoie
          </p>
        </div>

        <div class="flex flex-col items-center gap-5 sm:flex-row sm:gap-6">
          <div
            class="bg-primary/10 flex items-center justify-center rounded-full p-5"
          >
            <Image
              src={phoneIcon}
              alt="Icon telefon"
              width={28}
              height={28}
              class="opacity-60"
            />
          </div>
          <a
            href="tel:+40264414041"
            class="group flex flex-col items-center gap-1 transition-opacity hover:opacity-80"
          >
            <span class="text-sm font-medium text-neutral-500">
              Sună-ne acum
            </span>
            <span
              class="text-primary font-dm-sans text-2xl leading-tight font-bold sm:text-4xl"
            >
              +40-264-414041
            </span>
          </a>
        </div>

        <div class="flex w-full max-w-md items-center gap-4">
          <div
            class="h-px flex-1 bg-linear-to-r from-transparent via-neutral-300 to-transparent"
          >
          </div>
          <span
            class="text-[12px] font-medium tracking-wider text-neutral-400 uppercase"
          >
            sau
          </span>
          <div
            class="h-px flex-1 bg-linear-to-r from-transparent via-neutral-300 to-transparent"
          >
          </div>
        </div>

        <Button href="/contact"> Contactează un reprezentant local </Button>
      </div>
    </div>
  </div>
</section>
