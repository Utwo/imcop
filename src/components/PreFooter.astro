---
import { Image } from "astro:assets";
import rectangle45 from "../assets/images/rectangle45.png";
import rectangle46 from "../assets/images/rectangle46.png";
---

<section class="relative my-16 overflow-hidden bg-neutral-50 sm:py-16">
  <div class="relative z-10 mx-auto max-w-[900px] px-4 sm:px-6 lg:px-8">
    <div
      class="flex flex-col items-center justify-center gap-6 text-center sm:gap-8"
    >
      <div class="text-[16px] font-bold text-[#767676] sm:text-[18px]">
        <p class="leading-[30px]">Ai intrebari suplimentare?</p>
      </div>
      <div
        class="text-primary text-[24px] font-bold sm:text-[28px]"
        style="font-family: 'DM Sans', sans-serif;"
      >
        <p class="leading-[30px]">+40-264-414041</p>
      </div>
      <button
        class="bg-primary h-[50px] rounded-[6px] px-6 text-[16px] font-bold text-neutral-50 transition-opacity hover:opacity-90 sm:h-[54px] sm:px-8 sm:text-[18px]"
      >
        Contacteaza un reprezentat local
      </button>
    </div>
  </div>

  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div
      class="absolute bottom-0 left-0 h-[200px] w-[200px] opacity-30 sm:h-[282px] sm:w-[401.413px] sm:opacity-100"
    >
      <Image
        src={rectangle45}
        alt=""
        class="block size-full max-w-none object-cover"
        width={401.413}
        height={282}
      />
    </div>
    <div
      class="absolute right-0 bottom-0 h-[200px] w-[200px] opacity-30 sm:h-[282px] sm:w-[401.413px] sm:opacity-100"
    >
      <div class="h-full w-full rotate-180">
        <Image
          src={rectangle46}
          alt=""
          class="block size-full max-w-none object-cover"
          width={401.413}
          height={282}
        />
      </div>
    </div>
  </div>
</section>
