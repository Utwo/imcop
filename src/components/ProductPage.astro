---
import Layout from "../layouts/Layout.astro";
import TileColorSwatch from "./TileColorSwatch.astro";
import TileSpecification from "./TileSpecification.astro";
import { Image, type ImageMetadata } from "astro:assets";
import Button from "./Button.astro";

interface CatalogLink {
  label: string;
  href: string;
}

interface ColorSwatch {
  image: ImageMetadata;
  alt: string;
  label: string;
  backgroundColor: string;
}

interface Specification {
  title: string;
  image: ImageMetadata;
  imageAlt?: string;
  details: string[];
}

interface Props {
  productType: "clasic" | "avantaj";
  title: string;
  description: string[];
  accessoriesImage: ImageMetadata;
  catalogLinks: CatalogLink[];
  colorsIntro: string;
  colorSwatches: ColorSwatch[];
  surface: string;
  material: string;
  specifications: Specification[];
  ctaButton: {
    href: string;
    text: string;
  };
  heroBackground: ImageMetadata;
}

const {
  productType,
  title,
  description,
  accessoriesImage,
  catalogLinks,
  colorsIntro,
  colorSwatches,
  surface,
  material,
  specifications,
  ctaButton,
  heroBackground,
} = Astro.props;

const isClasic = productType === "clasic";
const clasicUrl = "/produse/clasic";
const avantajUrl = "/produse/avantaj";
---

<Layout>
  <section class="relative pt-26">
    <!-- Background Image with Gradient Overlay -->
    <div class="absolute inset-0 z-0">
      <Image
        src={heroBackground}
        alt="House with tiled roof"
        class="h-full w-full object-cover"
      />
      <!-- Gradient Overlay -->
      <div
        class="absolute inset-0 bg-linear-to-b from-black/60 via-transparent to-white"
      >
      </div>
    </div>

    <!-- Overlay Content -->
    <div class="relative z-10 mx-auto mt-80 max-w-[1200px]">
      <div class="mx-4 flex justify-end gap-2">
        <a
          href={clasicUrl}
          class={`cursor-pointer rounded-t-md px-20 py-3 text-lg font-bold text-white transition-all ${
            isClasic ? "bg-primary" : "bg-gray-500 hover:bg-gray-600"
          }`}
          aria-pressed={isClasic}
        >
          CLASIC
        </a>
        <a
          href={avantajUrl}
          class={`cursor-pointer rounded-t-md px-20 py-3 text-lg font-bold text-white transition-all ${
            !isClasic ? "bg-primary" : "bg-gray-500 hover:bg-gray-600"
          }`}
          aria-pressed={!isClasic}
        >
          AVANTAJ
        </a>
      </div>

      <div
        class="flex flex-col justify-between gap-8 rounded-md bg-white px-8 pt-10 lg:flex-row lg:gap-12"
      >
        <!-- Left side - Product Info -->
        <div>
          <!-- Product Title -->
          <h1 class="text-primary mb-6 text-3xl font-bold">
            {title}
          </h1>

          <!-- Product Description -->
          <div class="max-w-[642px] space-y-4">
            {description.map((paragraph) => <p>{paragraph}</p>)}
            <div class="mb-12 lg:mb-16">
              <Image
                src={accessoriesImage}
                alt="Tile accessories"
                class="object-contain"
              />
            </div>
          </div>
        </div>

        <!-- Right side - Catalog -->
        <div>
          <h2 class="mb-4 text-xl">Catalog</h2>
          <ul class="list-disc space-y-3 pl-5">
            {
              catalogLinks.map((link) => (
                <li>
                  <a href={link.href} target="_blank" class="underline">
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>

    <!-- Navigation Arrows -->
    <button
      class="absolute top-1/2 left-4 z-20 h-10 w-10 -translate-y-1/2 transition-opacity hover:opacity-80 lg:left-20"
      aria-label="Previous"
    >
      <svg
        class="h-full w-full"
        fill="rgba(255, 255, 255, 0.8)"
        viewBox="0 0 16 16"
      >
        <path
          d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"
        ></path>
      </svg>
    </button>
    <button
      class="absolute top-1/2 right-4 z-20 h-10 w-10 -translate-y-1/2 transition-opacity hover:opacity-80 lg:right-20"
      aria-label="Next"
    >
      <svg
        class="h-full w-full"
        fill="rgba(255, 255, 255, 0.8)"
        viewBox="0 0 16 16"
      >
        <path
          d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"
        ></path>
      </svg>
    </button>
  </section>

  <!-- Products Section -->
  <section>
    <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">
      <!-- Available Colors Section -->
      <h2 class="mb-4 text-2xl font-medium text-gray-500">
        Culori disponibile
      </h2>
      <p>{colorsIntro}</p>
    </div>

    <!-- Color Swatches with Background Frames -->
    <div class="mx-auto mt-6 grid grid-cols-2 sm:grid-cols-3">
      {
        colorSwatches.map((swatch) => (
          <TileColorSwatch
            image={swatch.image}
            alt={swatch.alt}
            label={swatch.label}
            backgroundColor={swatch.backgroundColor}
          />
        ))
      }
    </div>

    <div class="mx-auto mt-12 max-w-[1200px] px-4 sm:px-6 lg:px-8">
      <!-- Characteristics Section -->
      <div>
        <h2 class="mb-4 text-2xl font-medium text-gray-500">Caracteristici</h2>

        <!-- General Properties -->
        <div class="mb-8 space-y-2">
          <p><strong>Suprafață</strong>: {surface}</p>
          <p><strong>Material</strong>: {material}</p>
        </div>

        <!-- Product Specifications with Tile Shapes Image -->
        <div class="flex flex-col gap-4">
          {
            specifications.map((spec) => (
              <TileSpecification
                title={spec.title}
                image={spec.image}
                imageAlt={spec.imageAlt}
              >
                <ul class="space-y-1">
                  {spec.details.map((detail) => (
                    <li set:html={detail} />
                  ))}
                </ul>
              </TileSpecification>
            ))
          }

          <!-- Call to Action Button -->
          <div class="mt-12 flex justify-center">
            <Button href={ctaButton.href}>{ctaButton.text}</Button>
          </div>
        </div>
      </div>
    </div>

    <style>
      li::marker {
        color: var(--color-primary);
      }
    </style>
  </section>
</Layout>
