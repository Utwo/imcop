---
import { Image, type ImageMetadata } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
  imageAlt?: string;
}

const { title, image, imageAlt = "Tile shapes" } = Astro.props;
---

<div
  class="flex flex-col items-center gap-4 border-t border-gray-200 py-4 sm:flex-row sm:gap-20"
>
  <h3 class="mb-2 w-full max-w-30 shrink-0 text-xl text-gray-500">{title}</h3>
  <div class="max-w-35">
    <Image src={image} alt={imageAlt} class="object-contain" />
  </div>
  <slot />
</div>
