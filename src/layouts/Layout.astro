---
import "../styles/global.css";
import Header from "../components/Header.astro";
import PreFooter from "../components/PreFooter.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "IMCOP - Țigle din Beton",
  description = "IMCOP produce și comercializează țigle din beton de înaltă calitate din 1991. Oferim garanție 30 de ani pentru acoperișuri sigure și durabile.",
} = Astro.props;

const fullTitle = title.includes("IMCOP") ? title : `IMCOP - ${title}`;
const siteUrl = Astro.site?.href || Astro.url.origin || "https://www.imcop.ro";
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!doctype html>
<html lang="ro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preconnect to Google Fonts for faster DNS resolution -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Load Google Fonts asynchronously (non-blocking) -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Roboto:wght@400;500;700&display=swap"
      media="print"
    />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="IMCOP" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
  </head>
  <body class="bg-white text-black">
    <Header />

    <slot />
    <PreFooter />
    <Footer />
  </body>
</html>
