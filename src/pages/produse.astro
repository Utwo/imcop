---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import heroBackground from "../assets/images/hero-background-7757b6.png";
import accessoriesTiles from "../assets/images/accessories-tiles.png";
import tileShapes from "../assets/images/tile-shapes.png";
import teracotTile from "../assets/images/teracot-tile.png";
import rosuDeschisTile from "../assets/images/rosu-deschis-tile.png";
import rosuInchisTile from "../assets/images/rosu-inchis-tile.png";
import bordeauxTile from "../assets/images/bordeaux-tile.png";
import maroTile from "../assets/images/maro-tile.png";
import negruTile from "../assets/images/negru-tile.png";
import anticTile from "../assets/images/antic-tile.png";
import griTile from "../assets/images/gri-tile.png";
---

<Layout>
  <div class="bg-white min-h-screen">
    <Header />

    <!-- Hero Section -->
    <section class="relative min-h-[574px] overflow-hidden">
      <!-- Background Image with Gradient Overlay -->
      <div class="absolute inset-0 z-0">
        <Image
          src={heroBackground}
          alt="House with tiled roof"
          class="w-full h-full object-cover"
        />
        <!-- Gradient Overlay -->
        <div
          class="absolute inset-0 bg-gradient-to-b from-black/60 via-transparent to-white"
        >
        </div>
      </div>

      <!-- Overlay Content -->
      <div
        class="relative z-10 max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 pt-20 lg:pt-32"
      >
        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
          <!-- Left side - Product Info -->
          <div class="lg:w-2/3">
            <!-- Tabs -->
            <div class="flex gap-2 mb-6">
              <button
                class="bg-[#ED1B24] text-white px-6 py-3 font-bold text-lg rounded-[6px]"
                aria-pressed="true"
              >
                CLASIC
              </button>
              <button
                class="bg-[#767676] text-white px-6 py-3 font-bold text-lg rounded-[6px] hover:opacity-90 transition-opacity shadow-[inset_0px_-6px_9px_0px_rgba(0,0,0,0.25)]"
                aria-pressed="false"
              >
                AVANTAJ
              </button>
            </div>

            <!-- Product Title -->
            <h1
              class="text-[#ED1B24] font-bold text-[28px] leading-[1.07] mb-6"
              style="font-family: 'DM Sans', sans-serif;"
            >
              Țiglă din beton clasic
            </h1>

            <!-- Product Description -->
            <div
              class="text-black text-[18px] leading-[1.67] mb-8 space-y-4 max-w-[642px]"
              style="font-family: 'Roboto', sans-serif;"
            >
              <p>
                Eternul clasic are o utilizare largă, el nu se demodează
                niciodată, forma geometrică, regulată, adaptându-se perfect
                oricărui tip de arhitectură.
              </p>
              <p>
                Astfel, simplitatea formelor va conferi acoperișului
                dumneavoastră o ținută plină de caracter și distincție atât acum
                cât și peste 50 de ani.
              </p>
            </div>
          </div>

          <!-- Right side - Catalog -->
          <div class="lg:w-1/3">
            <h2
              class="text-[#767676] font-medium text-[20px] leading-[1.5] mb-4"
              style="font-family: 'DM Sans', sans-serif;"
            >
              Catalog
            </h2>
            <ul class="space-y-3 text-black text-[15px] leading-[1.17]">
              <li class="flex items-center gap-3">
                <div
                  class="w-2 h-2 rounded-full border-[6px] border-[#ED1B24] flex-shrink-0"
                >
                </div>
                <span style="font-family: 'Roboto', sans-serif;"
                  >Declarație de performanță</span
                >
              </li>
              <li class="flex items-center gap-3">
                <div
                  class="w-2 h-2 rounded-full border-[6px] border-[#ED1B24] flex-shrink-0"
                >
                </div>
                <span style="font-family: 'Roboto', sans-serif;"
                  >Certificat de garanție</span
                >
              </li>
              <li class="flex items-center gap-3">
                <div
                  class="w-2 h-2 rounded-full border-[6px] border-[#ED1B24] flex-shrink-0"
                >
                </div>
                <span style="font-family: 'Roboto', sans-serif;"
                  >Pliant produse</span
                >
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Navigation Arrows -->
      <button
        class="absolute left-4 lg:left-20 top-1/2 -translate-y-1/2 z-20 w-10 h-10 hover:opacity-80 transition-opacity"
        aria-label="Previous"
      >
        <svg
          class="w-full h-full"
          fill="rgba(255, 255, 255, 0.8)"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"
          ></path>
        </svg>
      </button>
      <button
        class="absolute right-4 lg:right-20 top-1/2 -translate-y-1/2 z-20 w-10 h-10 hover:opacity-80 transition-opacity"
        aria-label="Next"
      >
        <svg
          class="w-full h-full"
          fill="rgba(255, 255, 255, 0.8)"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"
          ></path>
        </svg>
      </button>
    </section>

    <!-- Products Section -->
    <section class="py-12 lg:py-16 bg-white">
      <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Accessories Image -->
        <div class="mb-12 lg:mb-16">
          <Image
            src={accessoriesTiles}
            alt="Tile accessories"
            class="w-full max-w-[642px] h-auto object-contain"
          />
        </div>

        <!-- Available Colors Section -->
        <div class="mb-12 lg:mb-16">
          <h2
            class="text-[#767676] font-medium text-[24px] leading-[1.25] mb-4"
            style="font-family: 'DM Sans', sans-serif;"
          >
            Culori disponibile
          </h2>
          <p
            class="text-black text-[18px] leading-[1.67] mb-8"
            style="font-family: 'Roboto', sans-serif;"
          >
            Pentru țigla CLASIC, vă punem la dispoziție 8 variante de culoare:
          </p>

          <!-- Color Swatches with Background Frames -->
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 lg:gap-6">
            <!-- teracot -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#A34A28] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={teracotTile}
                  alt="Teracot tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                teracot
              </p>
            </div>

            <!-- roșu deschis -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#9A4739] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={rosuDeschisTile}
                  alt="Roșu deschis tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                roșu deschis
              </p>
            </div>

            <!-- roșu închis -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#692D23] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={rosuInchisTile}
                  alt="Roșu închis tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                roșu închis
              </p>
            </div>

            <!-- bordeaux -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#743838] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={bordeauxTile}
                  alt="Bordeaux tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                bordeaux
              </p>
            </div>

            <!-- maro -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#4E2D34] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={maroTile}
                  alt="Maro tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                maro
              </p>
            </div>

            <!-- negru -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#676560] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={negruTile}
                  alt="Negru tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                negru
              </p>
            </div>

            <!-- antic -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#463835] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={anticTile}
                  alt="Antic tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                antic
              </p>
            </div>

            <!-- gri -->
            <div class="flex flex-col items-center">
              <div
                class="w-full aspect-[386/398] mb-3 rounded-[3px] overflow-hidden bg-[#575A69] p-6 flex items-center justify-center shadow-[0px_0px_40px_3px_rgba(0,0,0,0.25)]"
              >
                <Image
                  src={griTile}
                  alt="Gri tile"
                  class="w-full h-full object-contain"
                />
              </div>
              <p
                class="text-black text-[18px] font-bold leading-[1.67] text-center"
                style="font-family: 'Roboto', sans-serif;"
              >
                gri
              </p>
            </div>
          </div>
        </div>

        <!-- Characteristics Section -->
        <div>
          <h2
            class="text-[#767676] font-medium text-[24px] leading-[1.25] mb-4"
            style="font-family: 'DM Sans', sans-serif;"
          >
            Caracteristici
          </h2>

          <!-- General Properties -->
          <div
            class="mb-8 space-y-2 text-black text-[18px] leading-[1.67]"
            style="font-family: 'Roboto', sans-serif;"
          >
            <p><strong>Suprafață</strong>: netedă</p>
            <p>
              <strong>Material</strong>: nisip, ciment, apă, pigmenți anorganici
            </p>
          </div>

          <!-- Product Specifications with Tile Shapes Image -->
          <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
            <!-- Left side - Tile Shapes Image -->
            <div class="flex-shrink-0 lg:w-[143px]">
              <Image
                src={tileShapes}
                alt="Tile shapes"
                class="w-full h-auto object-contain"
              />
            </div>

            <!-- Right side - Specifications -->
            <div class="flex-1 space-y-8">
              <!-- Tigla -->
              <div>
                <h3
                  class="text-[#767676] font-normal text-[18px] leading-[1.67] mb-2"
                  style="font-family: 'Roboto', sans-serif;"
                >
                  Tigla
                </h3>
                <div
                  class="text-black text-[18px] leading-[1.67] space-y-1"
                  style="font-family: 'Roboto', sans-serif;"
                >
                  <p>Dimensiuni: 418 mm x 330 mm.</p>
                  <p>Suprapunere pe lungime: Minimum 75 mm.</p>
                  <p>Lungime utila: Maximum 343 mm.</p>
                  <p>Latime utila: 298 mm.</p>
                  <p>
                    Necesar: 9,8 tigle/mp la o suprapunere pe lungime de 75 mm
                  </p>
                  <p>10,6 tigle/mp la o suprapunere pe lungime de 100 mm.</p>
                  <p>Greutate: 4,3 Kg/bucata.</p>
                </div>
                <div class="border-t border-[#E4E4E4] mt-4"></div>
              </div>

              <!-- Coama -->
              <div>
                <h3
                  class="text-[#666666] font-normal text-[18px] leading-[1.67] mb-2"
                  style="font-family: 'Roboto', sans-serif;"
                >
                  Coama
                </h3>
                <div
                  class="text-black text-[18px] leading-[1.67] space-y-1"
                  style="font-family: 'Roboto', sans-serif;"
                >
                  <p>Dimensiuni:L = 400 mm</p>
                  <p>Necesar: 3 bucati/ml.</p>
                  <p>Greutate: 3,8 kg/bucata.</p>
                </div>
                <div class="border-t border-[#E4E4E4] mt-4"></div>
              </div>

              <!-- Aerisire -->
              <div>
                <h3
                  class="text-[#666666] font-normal text-[18px] leading-[1.67] mb-2"
                  style="font-family: 'Roboto', sans-serif;"
                >
                  Aerisire
                </h3>
                <div
                  class="text-black text-[18px] leading-[1.67] space-y-1"
                  style="font-family: 'Roboto', sans-serif;"
                >
                  <p>Dimensiuni: 418 x 330 mm</p>
                  <p>Necesar: în functie de configuratia acoperișului.</p>
                  <p>Greutate: 5,3 kg/bucata.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Call to Action Button -->
          <div class="mt-12 flex justify-center">
            <button
              class="bg-[#ED1B24] text-white px-8 py-3 font-bold text-[18px] leading-[1.67] rounded-[6px] hover:opacity-90 transition-opacity"
              style="font-family: 'Roboto', sans-serif;"
            >
              Vezi si tigla Avantaj
            </button>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</Layout>
